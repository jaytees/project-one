<%= form_for @drop, html: {:class => 'create-drop__form'} do | f | %>

    <% if @drop.errors.messages.any? %>
      <p>Please correct the following errors:</p>
      <ul>
        <% @drop.errors.full_messages.each do | error | %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>

    <% if flash[:message].present? %>
      <p><%= flash[:message] %> <%= link_to 'Click here to view in profile', user_path(@current_user.id) %></p>
    <% end %>


      <% if @current_user.present? %>

          <%= f.hidden_field :owner_id, :value => @current_user.id %>

      <% end %>


      <br>

      <%= f.label :collection_location, 'Collection Location' %>
      <%= f.text_field :collection_location, :class => 'create-drop__collection-location' %>
      <br>

      <%= f.label :collection_date, 'Collection Date' %>
      <%= f.date_field :collection_date, :class => 'create-drop__collection-date' %>
      <br>

      <%= f.label :delivery_location %>
      <%= f.text_field :delivery_location, :class => 'create-drop__delivery-location' %>
      <br>

      <%= f.label :delivery_date %>
      <%= f.date_field :delivery_date, :class => 'create-drop__delivery-date' %>
      <br>


      <%= f.submit class: 'signup-submit-button'%>



<% end %>
