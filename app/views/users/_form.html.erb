
<% if @user.errors.any? %>
  <p>Please correct the following errors:</p>
  <ul>
    <% @user.errors.full_messages.each do | error | %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do | f | %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>

  <%= f.label :location %>
  <%= f.text_field :location %>
  <br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>

  <%= f.submit class: 'signup-submit-button'%>

<% end %>
